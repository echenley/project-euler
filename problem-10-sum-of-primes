# Find the sum of all the primes below two million.

def primes_get(upto)
  primes = [2,3]
  pos_prime = 5
  while primes.length < upto
    limit = Math.sqrt(pos_prime).floor
    pos_prime % 2 == 0 ? pos_prime += 1 : divisor = 3
    primes.push(pos_prime) if divisor > limit
    while divisor <= limit
      break if pos_prime % divisor == 0
      primes.push(pos_prime) if (divisor + 2) > limit
      divisor += 2
    end
    pos_prime += 2
  end
  return primes[-1]
end

upto = 2000000
primes = primes_get(upto)

puts "This is the biggest prime under #{upto}: #{primes[-1]}"
puts "The sum of all primes up to #{upto} is: #{primes.inject(:+)}"
