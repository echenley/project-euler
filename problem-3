# The prime factors of 13195
# are 5, 7, 13 and 29.

# What is the largest prime factor
# of the number 600851475143 ?

primes = [2,3,5]
factors = []
num = 100
dynum = num

def next_prime(pos_prime)
    divisor = 3
    new_prime = pos_prime
    while divisor < new_prime
        if (divisor + 1) > (new_prime / 2)
            return new_prime
        elsif new_prime % divisor == 0
            new_prime += 2
            divisor = 3
            redo
        else
            divisor += 2
        end
    end
end

for n in (0..1000)
    if primes[n] == dynum
        factors.push(primes[n])
        break
    elsif dynum % (primes[n]) == 0
        factors.push(primes[n])
        dynum /= primes[n]
        redo
    elsif n == primes.length - 1
        primes.push(next_prime(primes[n]+2))
    end
end

puts "This is your prime set: #{primes.inspect}"
puts "The prime factors of #{num} are #{factors.inspect}"
