# A palindromic number reads the same both ways.
# The largest palindrome made from the product
# of two 2-digit numbers is 9009 = 91 Ã— 99.

# Find the largest palindrome made from the
# product of two 3-digit numbers.

largest_pal = 100001
limit = 100

def check_pal?(num)
    num = num.to_s.split('')
    if num[0] == num[-1] && num[1] == num[-2] && num[2] == num[-3]
        return true
    else
        return false
    end
end

catch (:done) do
    for x in 0..limit
        for y in 0..x
            num = (999-x)*(999-y)
            if check_pal?(num) == true && num > largest_pal
                largest_pal = num
                dig1 = x
                dig2 = y
                throw :done if x == limit
            end
        end
    end
    puts "#{999-dig1} x #{999-dig2} = #{largest_pal} is the largest palindrome made from the product of two 3-digit numbers, bitches."
end

